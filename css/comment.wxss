.all_comt {
  padding: 10px;
  font-size: 18px;
  border-top: 15rpx solid #f3f4f6;
}

.all_comt text {
  font-style: italic
}

.observer {
  display: flex;
  padding: 20rpx 20rpx 30rpx;
}

.observerTitle {
  width: 80rpx;
}

.observerTitle image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 5px;
  background-color: #f3f4f6;
}

.oberserContent {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  width: 610rpx;
}

.oberserContent view {
  display: flex;
  margin-top: 20rpx;
}

.comt_imgs {
  width: 210rpx;
  height: 210rpx;
  margin-right: 10rpx;
  background-color: #f3f4f6;
}

.time {
  font-size: 22rpx;
}


.deleting {
  width: 0;
  position: relative;
  left: -60rpx;
}

.deleting image {
  width: 50rpx;
  height: 50rpx;
}


/* 店铺图片展示 */
.shopimg image {
  width: 96.5%;
  margin-left: 15rpx;
  background-color: #f3f4f6;
}

.no-more {
  color: gray;
  margin-top: 50px;
  padding: 20rpx;
  text-align: center;
  font-size: 26rpx;
}

.location {
  border-top: 1px solid #f5f4f4;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
}

/* 到底显示 */
.bottom {
  padding: 20px 0 70px 113rpx;
  color: gray;
  font-size: 14px;
}

/* 没有评论 */
.else_box {
  height: 300px;
  color: #a4a4a4;
  font-size: 26rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.else_box image {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
}

.elsebox text {
  color: gray;
  font-size: 26rpx;

}


/* 加载显示 */
.loading {
  width: 100%;
  height: 99%;
  color: #a4a4a4;
  font-size: 26rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-top: 1px solid #f5f4f4;
}

.loading image {
  width: 260rpx;
  height: 260rpx;
}

.loading view {
  margin-top: -65rpx;
}

.Canvas {
  position: absolute;
  left: -100000px;
  bottom: -111111px;
  height: 1000px;
  width: 1000px;
}