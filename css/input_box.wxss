.input-box {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
}

.input-box .send-msg-box {
  display: flex;
  align-items: center;
  padding: 20rpx 20rpx 30rpx;
  border-top: 1px solid #f3f4f6;
  padding-bottom: 25px;
}

.input-box .send-more-box {
  margin: 20rpx 35rpx 35rpx 35rpx;
}

.input-box .input-item {
  flex: 1;
  width: 0%;
}

.input-box .input-item .comment-icon {
  position: absolute;
  left: 5rpx;
  top: 6rpx;
}

.input-box .input-item .input {
  font-size: 15px;
  padding: 0 10px;
  line-height: 60rpx;
  border-radius: 2px;
  background-color: #f3f4f6;
}

.input-box .input-item .keyboard-input {
  width: auto;
  max-height: 500rpx;
  height: 60rpx;
  word-break: break-all;
  overflow: auto;
}


.input-box .add-icon {
  width: 55rpx;
  height: 55rpx;
  margin: 0 20rpx;
}

.input-box .submit-btn {
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  text-align: center;
  margin-left: 20rpx;
}

button::after {
  border: none;
}

.hidden {
  display: flex;
  padding: 0 0 20rpx 15rpx;
}

.more {
  width: 134rpx;
  height: 130rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 10rpx;
  border-radius: 2px;
  background-color: #D5D5D5;
}


.more image {
  width: 60rpx;
  height: 60rpx;
}


.file-box {
  width: 134rpx;
  height: 130rpx;
  position: relative;
  margin-left: 10rpx;
}

.deleting {
  animation: deleting 0.5s ease;
  animation-fill-mode: forwards;
}

@keyframes deleting {
  0% {
    transform: scale(1);
  }

  100% {
    transform: scale(0);
  }
}

.file-box image {
  height: 100%;
  width: 100%;
  border-radius: 2px;
}

.remove-icon {
  position: absolute;
  right: 5rpx;
  top: 5rpx;
}