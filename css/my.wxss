/* 个人背景框 */
.userBox {
  width: 100%;
  height: 180px;
  margin-top: 20px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.name {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-end;
}

.urlBox {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 5px solid white;
  background-color: white;
  overflow: hidden;
}

.urlBox image {
  width: 100%;
  height: 100%;
}

.name {
  font-size: 30rpx;
  font-weight: bold;
}

.data {
  font-size: 26rpx;
  font-weight: bold;
  display: flex;
  justify-content: space-between;
  margin-left: 20rpx;
}

.data text {
  margin: 0rpx 20rpx 0 20rpx;
}