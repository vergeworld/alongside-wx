/********顶部返回导航栏 *********/
/* 显示 */
.back {
  width: 120rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1000;
}

.back view {
  padding: 20rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  margin: 45rpx 0 0 20rpx;
}

.back image {
  width: 40rpx;
  height: 40rpx;
  margin: 80rpx 0 0 20rpx;
}

/*******隐藏********/
.div {
  color: white;
  width: 100%;
  height: 140rpx;
  background-color: white;
  position: fixed;
  top: 0;
  z-index: 1000;
}

.div view {
  display: flex;
  align-items: center;
  margin-top: 60rpx;
}

.div view image {
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx 0 0 20rpx;
}

.div view text {
  margin: 20rpx 0 0 10rpx;
}

.navBar{
  width: 100%;
  height: 140rpx;
  background-color: white;
  position: fixed;
  top: 0;
  z-index: 1000;
}

.navImg {
  width: 100%;
  position: fixed;
  top: 35px;
  display: flex;
  justify-content: center;
  z-index: 1000;
}

.navImg image {
  width: 220rpx;
}

/************ 加载显示***************/
.loading {
  width: 100%;
  height: 100%;
  color: gray;
  font-size: 13px;
  font-weight: bold;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: absolute;
  top: 0;
  left: 0;
}

.loading image {
  width: 130rpx;
  height: 130rpx;
  margin-bottom: 10rpx;
}

/* ***********下拉加载显示 *********/
.loadeMore {
  color: gray;
  font-size: 14px;
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}


.loadeMore image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

/* *************圆************* */
.cir_box {
  height: 140px;
  font-weight: bold;
  overflow: hidden;
  margin-bottom: -140px;
  background-color: #02f598;
}

.circle {
  width: 2000rpx;
  height: 2000rpx;
  margin-left: -627rpx;
  margin-top: 60px;
  border-radius: 50%;
  background-color: #f4f5fa;
}

/* 搜索没有 */
.blank-box {
  height: 90%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 100rpx;
  left: 0;
  right: 0;
}

.blank-box image {
  width: 160rpx;
  height: 160rpx;
}

.blank-box text {
  color: #a4a4a4;
  font-size: 26rpx;
  font-weight: bold;
}

