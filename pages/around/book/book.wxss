page {
  background-color: #f5f4f4;
}

@import '../../../css/search.wxss';

.ipt {
  background-color: #3f515b;
}

.add_img {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.cir_box {
  height: 190px;
  background: #3f515b;
  overflow: hidden;
}

.sw_box {
  width: 100%;
  height: 140px;
  position: absolute;
  top: 50px;
  left: 0;
}

.sw {
  width: 100%;
  height: 140px;
}

.sw_img {
  width: 95%;
  height: 100%;
  border-radius: 10px;
  margin-left: 20rpx;
}

.circle {
  width: 2750rpx;
  height: 2750rpx;
  border-radius: 50%;
  margin-left: -1000rpx;
  margin-top: 100px;
  background-color: #f5f4f4;
}

/* 博主内容 */
.top-box {
  margin: 20rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  background-color: white;
  overflow: hidden;
}

.name-box {
  width: 95%;
  height: 120rpx;
  margin-left: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #f5f4f4;
}

.img-name {
  display: flex;
  align-items: center;
}

.name-img {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}

.name {
  height: 100rpx;
  font-size: 30rpx;
  font-weight: bold;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.time {
  color: gray;
  font-size: 22rpx;
}

.bottom-box {
  display: flex;
  padding: 20rpx;
}

.text-img {
  width: 250rpx;
  height: 240rpx;
  border-radius: 5px;

}

.text-box {
  width: 60%;
  height: 240rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.book {
  font-size: 26rpx;
  font-weight: bold;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.reason {
  font-size: 26rpx;
  width: 100%;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}

.author {
  font-size: 26rpx;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.number {
  color: gray;
  font-size: 22rpx;
  display: flex;
  width: 100%;
  justify-content: space-between;
}

/* 提示：没有更多啦 */
.no_more {
  height: 80rpx;
  color: #a4a4a4;
  text-align: center;
  line-height: 80rpx;
  font-size: 24rpx;
  background-color: white;
}

/* 加载显示 */
.loading {
  width: 100%;
  height: 100%;
  color: #a4a4a4;
  font-size: 26rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: white;
}

.loading image {
  width: 260rpx;
  height: 260rpx;
}

.loading view {
  margin-top: -65rpx;
}