/* 内容标题 */
.ctnt {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  background-color: white;
  border-top: 1px solid #f5f4f4;
}

.txt-1 {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.tj_buttom {
  width: 100%;
  height: 60rpx;
  border: none;
  display: flex;
  justify-content: center;
  align-items: center;
  background: none;
  outline: none;
  border-style: none;
}

.tj_buttom::after {
  border: none;
}

.tj_img {
  width: 45rpx;
  height: 45rpx;
}

.txt-gou {
  color: rgb(255, 153, 0);
  font-size: 20rpx;
  font-weight: bold;
  margin-right: 80rpx;
}

.taste {
  font-size: 24rpx;
  margin-top: 20rpx;
}

.txt-pay {
  color: gray;
  font-size: 24rpx;
  padding-top: 20rpx;
}


/*******************评论内容**********************/
.remark {
  padding: 20rpx;
  font-size: 30rpx;
  border-top: 10px solid #f5f4f4;
}

.observer {
  padding: 20rpx 20rpx 20rpx 20rpx;
}

.observerTitle {
  display: flex;
  align-items: center;
}

.observerTitle image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.observerTitle text {
  font-size: 26rpx;
  font-weight: bold;
  color: blue;
  margin-left: 20rpx;
}

.oberserContent {
  display: flex;
  flex-direction: column;
  margin-left: 60rpx;
  padding-top: 10rpx;
  border-bottom: 1px solid #f5f4f4;
}

.oberserContent text {
  font-size: 28rpx;
  font-weight: 500;
}

.oberserContent view {
  display: flex;
  margin-top: 20rpx;
}

.oberserContent view image {
  width: 210rpx;
  height: 210rpx;
  margin-right: 10rpx;
}

.time {
  height: 60rpx;
  color: gray;
  font-size: 20rpx;
}

/* 没有评论 */
.else_box {
  height: 250px;
  color: #a4a4a4;
  font-size: 26rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 60px;
}

.else_box image {
  width: 160rpx;
  height: 160rpx;
}

/*******************输入框**********************/
@import '../../../../css/input_box.wxss';

.bottom {
  color: gray;
  font-size: 28rpx;
  padding-top: 20rpx;
  height: 250rpx;
  text-align: center;
}

/* 加载显示 */
.loading {
  width: 100%;
  height: 99%;
  color: #a4a4a4;
  font-size: 26rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-top: 1px solid #f5f4f4;
}

.loading image {
  width: 260rpx;
  height: 260rpx;
}

.loading view {
  margin-top: -65rpx;
}

.Canvas {
  position: absolute;
  left: -100000px;
  bottom: -111111px;
  height: 1000px;
  width: 1000px;
}