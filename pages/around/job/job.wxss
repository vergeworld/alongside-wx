/* 平台声明 */
@keyframes remindMessage {
  0% {
    -webkit-transform: translateX(90%);
  }

  100% {
    -webkit-transform: translateX(-180%);
  }
}

.notice {
  padding: 20rpx;
  display: flex;
  align-items: center;
  background-color: white;
  border-top: 1px solid #f5f4f4;
}

.notice image {
  width: 35rpx;
  height: 35rpx;
  margin-right: 20rpx;
}

.notice view {
  width: 90%;
  margin-right: 10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.notice text {
  display: block;
  color: red;
  font-size: 28rpx;
  font-weight: 500;
  animation: remindMessage 14s linear infinite;
}

/* 顶部幻灯片 */
.top-swiper {
  width: 100%;
  height: 400rpx;
  overflow: hidden;
}

.swiperImg {
  width: 100%;
  height: 400rpx;
  border-top-right-radius: 10px;
  border-top-left-radius: 10px;
}

/* 招聘内容 */
.jobBox {
  padding: 20rpx;
  border-bottom: 1px solid #f5f4f4;
}

.jobBox1 {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.jobBox1 text {
  font-size: 28rpx;
  font-weight: bold;
}

.jobBox2 {
  width: 100%;
  font-size: 24rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.timeBox {
  width: 100%;
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
}

.time {
  width: 130rpx;
  height: 28rpx;
  font-size: 24rpx;
  overflow: hidden;
}



