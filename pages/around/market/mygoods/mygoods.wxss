page {
  background-color: #f5f4f4;
}

@import '../../../../css/market.wxss';


.modal {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1000;
}

.hidden {
  width: 100%;
  position: absolute;
  z-index: 3000;
  bottom: 0;
  left: 0;
  text-align: center;
  background: #dfdede;
}

.public {
  background-color: white;
  padding: 26rpx 0;
  border-bottom: 1px solid #f5f4f4;
}

.Mcancel {
  background: #fff;
  padding: 26rpx 0;
  border-top: 10px solid #dfdede;
}

.bottom {
  width: 100%;
  color: gray;
  font-size: 28rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: white;
  bottom: 0;
}

.upload {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #fac402;
  position: absolute;
  bottom: 100px;
  right: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.upload image {
  width: 50rpx;
  height: 50rpx;
}

/* 加载显示 */
.loading {
  width: 100%;
  height: 99%;
  color: #a4a4a4;
  font-size: 26rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-top: 1px solid #f5f4f4;
  background-color: white;
}

.loading image {
  width: 260rpx;
  height: 260rpx;
}

.loading view {
  margin-top: -65rpx;
}