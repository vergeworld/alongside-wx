page {
  background-color: #f5f4f4;
}

.big-box {
  border-top: 1px solid #f5f4f4;
  background-color: white;
  padding-top: 10rpx;
}


textarea {
  width: 60%;
  height: 100px;
  margin-left: 20rpx;
}

.price {
  width: 98%;
  height: 100rpx;
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.imgs-box {
  width: 222rpx;
  height: 222rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #f5f4f4;
}

.tool-box {
  display: flex;
}

.publish {
  width: 500rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-content: center;
  color: white;
  font-weight: bold;
  margin-top: 100rpx;
  background-color: #33FF00;
}

.send-more-box .more-btn-item .btn-txt {
  color: #888;
  font-size: 24rpx;
  margin: 10rpx 0;
}

.send-more-result-main {
  display: flex;
  flex-wrap: wrap;
}

.send-more-result-main .file-box {
  height: 222rpx;
  width: 222rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  position: relative;
  display: inline-block;
}

.send-more-result-main .file-box.deleting {
  animation: deleting 0.5s ease;
  animation-fill-mode: forwards;
}

@keyframes deleting {
  0% {
    transform: scale(1);
  }

  100% {
    transform: scale(0);
  }
}

.send-more-result-main image {
  height: 100%;
  width: 100%;
}

.send-more-result-main .remove-icon {
  position: absolute;
  right: 5rpx;
  top: 5rpx;
}

.send-more-result-main .file-box .img-box {
  height: 100%;
  width: 100%;

}

.buttomBox {
  height: 200rpx;
}

