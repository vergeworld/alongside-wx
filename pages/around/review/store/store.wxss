page {
  width: 100%;
  height: 100%;
}

/* 店铺名称 */
.title-name-img {
  display: flex;
  padding: 7.5px;
}

.title-img {
  width: 210rpx;
  height: 100px;
  border-radius: 5px;
}

.title-name {
  width: 480rpx;
  height: 100px;
  display: flex;
  flex-direction: column;
  display: flex;
  justify-content: space-between;
  margin-left: 20rpx;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  justify-content: space-between;
}

.name image {
  width: 40rpx;
  height: 40rpx;
}

.share {
  height: 40rpx;
  border: none;
  display: flex;
  justify-content: flex-end;
  background: none;
  outline: none;
  border-style: none;
  padding-right: 0;
}

.share::after {
  border: none;
}

.gradeImg {
  display: flex;
}

.gradeImg image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.gradeImg text {
  color: red;
  font-size: 22rpx;
  font-weight: bold;
  margin-left: 10rpx;
}

.lable {
  display: flex;
}

.lable text {
  color: white;
  font-size: 26rpx;
  background-color: orange;
  margin-right: 10rpx;
  padding: 0 10rpx 0 10rpx;
}

.com-ag {
  color: gray;
  font-size: 24rpx;
}

.address {
  color: gray;
  font-size: 24rpx;
}

.rank {
  height: 40px;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-weight: bold;
  padding-left: 20rpx;
  border-bottom: 5px solid #fafafa;
}

.rank image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

/* 底部内容区 */
.nav {
  box-sizing: border-box;
  font-size: 16px;
  white-space: nowrap;
}

.nav-item {
  color: gray;
  width: 250rpx;
  height: 40px;
  display: inline-block;
  text-align: center;
  line-height: 40px;
  background-color: white;
  border-bottom: 1px solid #fafafa;
}

.nav-item.active {
  color: black;
  font-weight: bold;
}

.tab-box {
  box-sizing: border-box;

}

.tab-content {
  overflow-y: scroll;
}

/* 美食列表 */
.content {
  display: flex;
  flex-wrap: wrap;
  align-content: space-between;
  background-color: #f5f4f4;
}

.text-top {
  width: 230rpx;
  height: 350rpx;
  border-radius: 5px;
  display: flex;
  justify-content: space-between;
  margin-top: 15rpx;
  margin-left: 17rpx;
  flex-direction: column;
  background-color: white;
  border-radius: 5px;
  overflow: hidden;
}

.text-img {
  width: 230rpx;
  height: 220rpx;
}

.text-1 {
  font-size: 26rpx;
  font-weight: bold;
  margin-left: 6rpx;
}

.taste {
  display: flex;
}

.text-2 {
  font-size: 10px;
  margin-top: 4px;
  margin-left: 6rpx;
  background-color: #f5f4f4;
  padding: 0 10rpx 0 10rpx;
}

.ni-pr {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 6rpx;
}

.nice {
  color: gray;
  font-size: 24rpx;
  margin-right: 6rpx;
}

.text-3 {
  color: red;
  font-size: 15px;
  margin-left: 6rpx;
}

/* 店铺展示 */
.shopimg image {
  width: 96.5%;
  margin-left: 15rpx;
}

.no-more {
  padding: 20rpx;
  text-align: center;
  font-size: 26rpx;
  background-color: white;
}

.elsebox {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.elsebox image {
  width: 180rpx;
  height: 180rpx;
}

.elsebox text {
  color: #a4a4a4;
  font-size: 26rpx;
}

/*******************评论内容**********************/
@import '../../../../css/comment.wxss';

/* 推荐按钮 */
.recommend {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  position: absolute;
  bottom: 100px;
  right: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0.9;
  background-color: #f5f4f4;
  overflow: hidden;
}

.recommend image {
  width: 100%;
  height: 100%;
}

/* 评论按钮 */
.comment {
  color: white;
  width: 50px;
  height: 50px;
  border-radius: 50%;
  position: absolute;
  bottom: 100px;
  right: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0.9;
  background-color: #02f598;
}

.comment image {
  width: 40rpx;
  height: 40rpx;
}

/*******************输入框**********************/
@import '../../../../css/input_box.wxss';

.bottom {
  color: gray;
  font-size: 28rpx;
  padding-top: 40rpx;
  height: 250rpx;
  text-align: center;
  border-top: 1px solid #f5f4f4;
}

/* 加载显示 */
.loading {
  width: 100%;
  height: 99%;
  color: #a4a4a4;
  font-size: 26rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-top: 1px solid #f5f4f4;
}

.loading image {
  width: 260rpx;
  height: 260rpx;
}

.loading view {
  margin-top: -65rpx;
}

.Canvas {
  position: absolute;
  left: -100000px;
  bottom: -111111px;
  height: 1000px;
  width: 1000px;
}