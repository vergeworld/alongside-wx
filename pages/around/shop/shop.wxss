page{
  height: 100%;
}

/* input输入框 */
.ipt {
  width: 100%;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: white;
}

.ipt view {
  width: 670rpx;
  height: 60rpx;
  font-size: 28rpx;
  font-weight: bold;
  margin: auto;
  display: flex;
  align-items: center;
  padding: 0 20rpx 0 20rpx;
  border-radius: 50px;
  background-color: #f5f4f4;
}

input {
  width: 100%;
}


.HZL_scroll {
  display: flex;
  align-items: center;
}

.HZL_scroll_left {
  width: 150rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.HZL_scroll_left_text {
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 150rpx;
  height: 50px;
}

.HZL_scroll_left_text_active {
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 150rpx;
  height: 50px;
  background: #f5f4f4;
}

.HZL_scroll_right {
  width: 600rpx;
  background-color: #f5f4f4;
}

.HZL_scroll_right_top {
  width: 563rpx;
  height: 70px;
  margin-left: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: white;
  border-radius: 5px;
  overflow: hidden;
}

.name_depict{
  color: aquamarine;
  font-weight: bold;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.snacks_name{
  font-size: 30rpx;
}

.snacks_depict{
  font-size: 26rpx;
  margin-top: 5px;
}

.snacks_img {
  width: 200rpx;
  height: 100rpx;
  margin-right: 40rpx;
}

/* 零食列表 */
.content {
  padding: 0rpx 20rpx 0 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.text-box {
  width: 272rpx;
  height: 400rpx;
  border-radius: 5px;
  display: flex;
  flex-direction: column;
  background-color: white;
  overflow: hidden;
  margin-top: 20rpx;
}

.text-img {
  width: 272rpx;
  height: 260rpx;
}


.txt-tit {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  margin-left: 15rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.botm {
  padding: 5rpx 15rpx 15rpx 15rpx;
  height: 90rpx;
  margin-top: 5rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.botm1 {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.txt-price {
  color: red;
  font-size: 24rpx;
  font-weight: bold;
}

.buy {
  color: gray;
  font-size: 20rpx;
}

.addimg {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.addimg image {
  width: 50rpx;
  height: 50rpx;
}

.nodata_text {
  width: 100%;
  height: 100%;
  color: #a4a4a4;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.nodata_text image {
  width: 320rpx;
  height: 320rpx;
  margin-bottom: 20rpx;
}

/* 购物车 */
.car {
  width: 120rpx;
  height: 120rpx;
  position: fixed;
  right: 30rpx;
  bottom: 180rpx;
  opacity: 0.95;
}

.car image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.no_more{
  height: 200px;
  color: #a4a4a4;
  font-size: 26rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.no_more image{
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
}

/* 加载显示 */
.loading {
  width: 100%;
  height: 90%;
  color: #a4a4a4;
  font-size: 26rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-top: 1px solid #f5f4f4;
  background-color: white;
}

.loading image {
  width: 260rpx;
  height: 260rpx;
}

.loading view {
  margin-top: -65rpx;
}