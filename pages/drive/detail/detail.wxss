page {
  width: 100%;
  height: 100%;
}

/* 店铺名称 */
.title-name-img {
  display: flex;
  padding: 7.5px;
}

.title-img {
  width: 210rpx;
  height: 100px;
  border-radius: 5px;
}

.title-name {
  width: 480rpx;
  height: 100px;
  display: flex;
  flex-direction: column;
  display: flex;
  justify-content: space-between;
  margin-left: 20rpx;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  justify-content: space-between;
}

.name image {
  width: 40rpx;
  height: 40rpx;
}

.share {
  width: 120rpx;
  height: 40rpx;
  border: none;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  background: none;
  outline: none;
  border-style: none;
  padding: 0;
}

.share::after {
  border: none;
}

.gradeImg {
  display: flex;
}

.gradeImg image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.gradeImg text {
  color: red;
  font-size: 22rpx;
  font-weight: bold;
  margin-left: 10rpx;
}

.lable {
  display: flex;
}

.lable text {
  color: white;
  font-size: 26rpx;
  background-color: orange;
  margin-right: 10rpx;
  padding: 0 10rpx 0 10rpx;
}

.com-ag {
  color: gray;
  font-size: 24rpx;
}

.address {
  color: gray;
  font-size: 24rpx;
}

.rank {
  height: 40px;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-weight: bold;
  padding-left: 20rpx;
  border-bottom: 5px solid #fafafa;
}

.rank image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

/* 底部内容区 */
.nav {
  box-sizing: border-box;
  font-size: 16px;
  white-space: nowrap;
}

.nav-item {
  color: gray;
  width: 250rpx;
  height: 40px;
  display: inline-block;
  text-align: center;
  line-height: 40px;
  background-color: white;
  border-bottom: 1px solid #fafafa;
}

.nav-item.active {
  color: black;
  font-weight: bold;
}

.tab-box {
  box-sizing: border-box;

}

.tab-content {
  overflow-y: scroll;
}

/****班型***/
.type {
  height: 70px;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  border-bottom: 1px solid #f5f4f4;
}

.type view {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.price {
  color: red;
}

.label {
  color: #a4a4a4;
  font-size: 26rpx;
}

/* 详情 */
.coach {
  height: 40px;
  line-height: 40px;
  padding: 15rpx;
  border-bottom: 1px solid #f5f4f4;
}


.coach_box {
  height: 70px;
  display: flex;
  padding: 15rpx;
  border-bottom: 1px solid #f5f4f4;
}

.index {
  width: 50px;
  text-align: center;
  line-height: 70px;
}

.coach_box image {
  width: 70px;
  height: 70px;
  margin-right: 20rpx;
  border-radius: 50px;
}


.age {
  color: orange;
  font-size: 20rpx;
  margin-left: 10rpx;
  border: 1px solid #f5f4f4;
  padding: 5rpx;
}

.student {
  font-size: 24rpx;
  margin-top: 20px;
}

.drive {
  padding: 0 15rpx;
  border-top: 10rpx solid #f5f4f4;
}

.drive view {
  height: 40px;
  line-height: 40px;
}

.drive image {
  width: 100%;
}

/*******************评论内容**********************/

.observer {
  padding: 20rpx;
  border-bottom: 1px solid #fafafa;
}

.observerTitle {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.img-name {
  display: flex;
  align-items: center;
}

.img-name image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.img-name text {
  color: blue;
  font-size: 26rpx;
  font-weight: bold;
  margin-left: 20rpx;
}

.time {
  width: 115rpx;
  height: 25rpx;
  color: gray;
  font-size: 20rpx;
  overflow: hidden;
}

.oberserContent {
  display: flex;
  flex-direction: column;
  margin-left: 60rpx;
  padding-top: 10rpx;
}

.oberserContent text {
  font-size: 28rpx;
  font-weight: 500;
}

.oberserContent view {
  display: flex;
  margin-top: 20rpx;
}

.oberserContent view image {
  width: 210rpx;
  height: 210rpx;
  margin-right: 10rpx;
}

/* 其他 */
.no-more {
  padding: 20rpx;
  text-align: center;
  font-size: 26rpx;
}

.location {
  border-top: 1px solid #f5f4f4;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
}

.elsebox {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.elsebox image {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 10rpx;
}

.elsebox text {
  color: #a4a4a4;
  font-size: 26rpx;

}

/* 报名咨询 */
.recommend {
  position: absolute;
  bottom: 170px;
  right: 20px;
}

.recommend image {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  opacity: 0.9;
}

.sign {
  color: white;
  width: 50px;
  height: 50px;
  border-radius: 50%;
  position: absolute;
  bottom: 100px;
  right: 20px;
  text-align: center;
  line-height: 50px;
  opacity: 0.9;
  background-color: #0af4e2;
}

.comment {
  color: white;
  width: 50px;
  height: 50px;
  border-radius: 50%;
  position: absolute;
  bottom: 100px;
  right: 20px;
  text-align: center;
  line-height: 50px;
  opacity: 0.9;
  background-color: #02f598;
}

.comment image {
  width: 40rpx;
  height: 40rpx;
}

/*******************输入框**********************/
@import '../../../css/input_box.wxss';

.bottom {
  color: gray;
  font-size: 28rpx;
  padding-top: 40rpx;
  height: 250rpx;
  text-align: center;
  border-top: 1px solid #f5f4f4;
}

/* 加载显示 */
.loading {
  width: 100%;
  height: 99%;
  color: #a4a4a4;
  font-size: 26rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-top: 1px solid #f5f4f4;
}

.loading image {
  width: 260rpx;
  height: 260rpx;
}

.loading view {
  margin-top: -65rpx;
}


.Canvas {
  position: absolute;
  left: -100000px;
  bottom: -111111px;
  height: 1000px;
  width: 1000px;
}