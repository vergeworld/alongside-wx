
/*********帖子内容**********/
.post-container {
  flex-direction: column;
  display: flex;
  background-color: #fff;
  border-top: 1px solid #f5f4f4;
  border-bottom: 5px solid #ededed;
}

.author {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.headimg {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-left: 20rpx;
}

.nickname {
  height: 90rpx;
  padding: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.follow {
  width: 140rpx;
  height: 60rpx;
  border-radius: 5px;
  margin-right: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #3f0;
}

.img-box {
  display: flex;
  flex-wrap: wrap;
  padding: 15rpx 0 0 15rpx;
}

.post-image {
  margin: 5rpx 0rpx 0rpx 5rpx;
}

.post-date {
  color: gray;
  font-size: 26rpx;
}

.click {
  width: 15rpx;
  height: 25rpx;
  margin-left: 60rpx;
}

.post-title {
  font-size: 30rpx;
  font-weight: bold;
}

.post-content {
  font-size: 30rpx;
  font-weight: 500;
  padding: 0 20rpx 0rpx 20rpx;
  letter-spacing: 3rpx;
  line-height: 40rpx;
}


.post-like {
  height: 60rpx;
  display: flex;
  flex-direction: row;
  line-height: 16px;
  align-items: center;
}


.post-like text {
  font-size: 26rpx;
  margin-left: 20rpx;
}

