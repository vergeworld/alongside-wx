/*******************输入框**********************/
@import '../../../css/input_box.wxss';

/* 到底提示 */
.bottom {
  color: gray;
  font-size: 28rpx;
  padding-top: 90rpx;
  height: 250rpx;
  text-align: center;
  /* border-top: 1px solid #f5f4f4; */
}

.else_box {
  height: 250px;
  color: #a4a4a4;
  font-size: 26rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 50px;
}

.else_box image {
  width: 160rpx;
  height: 160rpx;
}

/* 加载显示 */
.loading {
  width: 100%;
  height: 99%;
  color: #a4a4a4;
  font-size: 26rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-top: 1px solid #f5f4f4;
}

.loading image {
  width: 260rpx;
  height: 260rpx;
}

.loading view {
  margin-top: -65rpx;
}

