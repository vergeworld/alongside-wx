/* QQ图片 */
.bottom {
  margin: 10px;
  padding: 20px;
  background-color: white;
}

.xuexiao {
  font-size: 28rpx;
  font-weight: bold;
  margin-left: 10rpx;
}

.title-img{
  width: 30px;
  height: 30px;
}

.img-box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.img-box image {
  width: 400rpx;
  height: 395rpx;
}

.save-txet {
  font-size: 20rpx;
  margin-top: 50rpx;
  color: gray;
}

/* 电话框 */
.service-box {
  width: 89.5%;
  padding: 20rpx;
  margin: 20rpx 0 0 20rpx;
  background-color: white;
}

.service-phone {
  width: 100%;
  height: 80rpx;
  margin: 40rpx 0 0 0rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid black;
}

.phoneBox {
  display: flex;
  align-items: center;
}

.phoneBox text{
  margin-left: 10rpx;
}


