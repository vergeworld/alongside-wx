/********个人主页*********/
.headBox {
  color: white;
  width: 100%;
  height: 250px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: -webkit-linear-gradient(left, #54f8b7, #2bfdac, #02f598);
}

@import "../../../css/my.wxss";

/* 顶部返回隐藏条 */
@import "../../../css/div.wxss";

/* 显示返回按钮 */
.back {
  position: absolute;
  top: 0;
  left: 0;
  text-align: center;
}

.back view {
  padding: 20rpx;
  color: white;
  height: 50rpx;
  display: flex;
  align-items: center;
  margin: 45rpx 0 0 20rpx;
}

.back view image {
  width: 20rpx;
  height: 35rpx;
  margin-right: 20rpx;
}


@import "../../../css/forum.wxss";

.click{
  display: none;
}

.more{
  width: 60rpx;
  height: 60rpx;
  margin-right: 30rpx;
}

/* 上传分享 */
.upload {
  width: 50px;
  height: 50px;
 text-align: center;
  position: fixed;
  bottom: 100px;
  right: 20px;
  border-radius: 50%;
  background-color: #02f598;
  opacity: 0.8;
}

.upload image {
  width: 25px;
  height: 25px;
  margin-top: 12.5px;
}

.bottom {
  width: 100%;
  color: gray;
  font-size: 26rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: white;
}


button {
  width: 100%;
  height: 60rpx;
  border: none;
  display: flex;
  justify-content: center;
  align-items: center;
  background: none;
  outline: none;
  border-style: none;
}

button::after {
  border: none;
}

.else_box {
  width: 100%;
  color: #a4a4a4;
  font-size: 26rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.else_box image {
  width: 250rpx;
  height: 250rpx;
}

/* 加载显示 */
.loading {
  width: 100%;
  height: 99%;
  color: #a4a4a4;
  font-size: 26rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-top: 1px solid #f5f4f4;
}

.loading image {
  width: 260rpx;
  height: 260rpx;
}

.loading view {
  margin-top: -65rpx;
}